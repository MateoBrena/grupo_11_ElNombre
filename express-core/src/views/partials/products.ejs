<article>
    <a href="/productDetail/<%= elemento.id %> ">
        <img src="/img/Botines/<%=elemento.imagen%>" alt="Botines">
        <div class="descripcion">
            <h5> <%= elemento.nombre %></h5>
            <p> Terreno <%= elemento.categoria %> </p>
            <p> $<%= elemento.precio %> </p>
        </div>
        </a>

        <div class="contenedor">
        <% if (user && user.admin == 1){%> 
            <form action="/borrar?m=DELETE" method ="post" class="eliminar">
                <input type="hidden" name= "id" value="<%= elemento.id %>"  >
                <button type="submit"><i class="fa-solid fa-trash-can"></i></button>
            </form>
            <button type="none" class="agregar-carrito"><a href="/productCart"class="verde">Añadir al carrito</a></button> 
            <a href="/edit/<%= elemento.id %> "><i class="fa-solid fa-pencil"></i></a>
        </div>
<% }else { %> 
    <button type="none" class="agregar-carrito"><a href="/productCart"class="verde">Añadir al carrito</a></button> 
      <%} %> 
            
</article>

